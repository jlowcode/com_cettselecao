		<filename>cettselecao.php</filename>
		<filename>controller.php</filename>
		<folder>controllers</folder>
		<folder>views</folder>
		<folder>models</folder>
	</files>

    <languages folder="site/language">
        <language tag="en-GB">en-GB/en-GB.com_cettselecao.ini</language>
    </languages>

